{
  "manifest_version": 3,
  "name": "Color Saver",
  "description": "Save hex codes and view them with color swatches.",
  "version": "1.1",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}

